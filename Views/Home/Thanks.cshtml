@model SklepGamingowy.Models.GuestResponse

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Dziękujemy</title>
    <link rel="stylesheet" href="/lib/twitter-bootstrap/css/bootstrap.css" />
</head>
<body class="text-center">
    <div>
        <h1>Dziękujemy, @Model.Name!</h1>
        @if (Model.WillAttend == true)
        {
            @:Cieszymy się, że przyjdziesz do nas Gamingowcu
        }
        else
        {
            @:Przykro nam, że nie możesz się zjawić, ale dziękujemy za informację.
        }
    </div>
    <p>Kliknij <a asp-action="ListResponses">tutaj</a>, aby wyświetlić listę gości.</p>
</body>
</html>
