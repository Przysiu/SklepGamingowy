@model IEnumerable<SklepGamingowy.Models.GuestResponse>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/lib/twitter-bootstrap/css/bootstrap.css" />
    <title>Odpowiedzi</title>
</head>
<body>
    <div class="text-center p-2">
        <h2>Oto lista gości na przyjęciu</h2>
        <table class="table table-sm table-striped table-bordered">
            <thead>
                <tr>
                    <th>Imię i nazwisko</th>
                    <th>Adres e-mail</th>
                    <th>Numer telefonu</th>
                </tr>
            </thead>
            <tbody>
                @foreach (SklepGamingowy.Models.GuestResponse r in Model)
                {
                    <tr>
                        <td>@r.Name</td>
                        <td>@r.Email</td>
                        <td>@r.Phone</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
