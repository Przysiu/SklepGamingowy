@model SklepGamingowy.Models.GuestResponse

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Formularz Turniejowy</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/lib/twitter-bootstrap/css/bootstrap.css" />
</head>
<body>
    <h5 class="bg-primary text-white text-center m-2 p-2">Formularz turniejowy</h5>
    <form asp-action="TournamentForm" method="post" class="m-2">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Name">Imię i nazwisko:</label>
            <input class="form-control" asp-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="Email">Adres e-mail:</label>
            <input class="form-control" asp-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Phone">Numer telefonu:</label>
            <input class="form-control" asp-for="Phone" />
        </div>
        <div class="form-group">
            <label>Czy przyjdziesz na przyjęcie?</label>
            <select class="form-control" asp-for="WillAttend">
                <option value="">Wybierz opcję</option>
                <option value="true">Tak, przyjdę</option>
                <option value="false">Nie, nie przyjdę</option>
            </select>
        </div>
        <button class="btn btn-primary" type="submit">
            Wyślij Zgłoszenie
        </button>
    </form>
</body>
</html>
